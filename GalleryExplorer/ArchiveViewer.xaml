<Window x:Class="GalleryExplorer.ArchiveViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalleryExplorer"
        mc:Ignorable="d"
        Title="ArchiveViewer" Height="712" Width="1089" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="1" Grid.ColumnSpan="4" Margin="4" BorderThickness="1" BorderBrush="LightGray">
            <ContentControl x:Name="browserContainer" Content="Browser goes here" Grid.Row="1"/>
        </Border>
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Grid.Row="0" Margin="4 2 0 0"/>
        <Button Content="모든 이미지 다운로드" Margin="0 0 4 0" Grid.Row="0" HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</Window>
